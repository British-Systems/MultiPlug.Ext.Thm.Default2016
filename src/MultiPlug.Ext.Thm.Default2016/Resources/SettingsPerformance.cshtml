@model MultiPlug.Base.Http.EdgeApp
@{
    Layout = "MultiPlug.Ext.Thm.Default2016.Layout";
}

<style>
    .setting-heading img,
    .setting-heading h2 {
        display: inline-block;
        vertical-align: middle;
    }

    .setting-heading img {
        opacity: 0.7;
        filter: alpha(opacity=70);
    }

    .setting-heading h2 {
        margin-left: 0.1em;
    }
</style>

<div class="setting-heading">
    <h2>Performance</h2>
</div>
<form method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded">
    <h3 class="box-header">
        Assets Cache Defaults
    </h3>

    <div class="box">

        <div class="row-fluid">
            <div class="span3">
                <div class="row-fluid"><div class="span12">Seconds</div></div>
                <div class="row-fluid">
                    <input name="AssetsCacheSeconds" class="input-span12" type="text" value="@Model.Extension.Model.AssetsCacheSeconds">
                </div>
            </div>
            <div class="span3">
                <div class="row-fluid"><div class="span12">Minutes</div></div>
                <div class="row-fluid">
                    <input name="AssetsCacheMinutes" class="input-span12" type="text" value="@Model.Extension.Model.AssetsCacheMinutes">
                </div>
            </div>
            <div class="span3">
                <div class="row-fluid"><div class="span12">Hours</div></div>
                <div class="row-fluid">
                    <input name="AssetsCacheHours" class="input-span12" type="text" value="@Model.Extension.Model.AssetsCacheHours">
                </div>
            </div>
            <div class="span3">
                <div class="row-fluid"><div class="span12">Days</div></div>
                <div class="row-fluid">
                    <input name="AssetsCacheDays" class="input-span12" type="text" value="@Model.Extension.Model.AssetsCacheDays">
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span4"></div>
        <div class="span2">
            <button type="submit" value="submit" class="btn btn-green btn-block">Save</button>
        </div>
        <div class="span2">
            <button id="cancel-btn" type="button" class="btn  btn-block">Cancel</button>
        </div>
        <div class="span4">
        </div>
    </div>
</form> 

<script>
    $('#cancel-btn').click(function () {
        location.reload();
    });
</script>