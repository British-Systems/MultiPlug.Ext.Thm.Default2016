@model MultiPlug.Extension.Domain.Models.Views.Settings.RecipesModel
@{
    Layout = "layout";
}

<style>
    .setting-heading img,
    .setting-heading h2 {
        display: inline-block;
        vertical-align: middle;
    }

    .setting-heading img {
        opacity: 0.7;
        filter: alpha(opacity=70);
    }

    .setting-heading h2 {
        margin-left: 0.1em;
    }
</style>

<div class="setting-heading">
    <img height="35" width="35" alt="MultiPlug Icon" src="assets/default2016/images/MultiPlug-Icon.png">
    <h2>Recipes</h2>
</div>
<form method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded">
    <h3 class="box-header">
        Extensions with Recipe Configurators
    </h3>

    <div class="box">
        <div class="row-fluid">

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Extension</th>
                        <th>Order</th>
                        <th>Load</th>
                        <th>Save</th>
                        <th>Wait to start</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in @Model.Configurators)
                    {
                        <tr>
                            <input type="hidden" name="Configurator" value="@x.Name">
                            <td>@x.Name</td>
                            <td><input type="text" name="LoadOrder" placeholder="?" value="@x.Order" class="input-mini"></td>
                            <td><input type="checkbox" name="EnabledLoad" value="@x.Name" @x.HtmlEnabledLoad /></td>
                            <td><input type="checkbox" name="EnabledSave" value="@x.Name" @x.HtmlEnabledSave /></td>
                            <td><input type="checkbox" name="WaitForStart" value="@x.Name" @x.HtmlWaitForStart /></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span4"></div>
        <div class="span2">
            <button type="submit" value="submit" class="btn btn-green btn-block">Save</button>
        </div>
        <div class="span2">
            <button id="cancel-btn" type="button" class="btn  btn-block">Cancel</button>
        </div>
        <div class="span4">
        </div>
    </div>
</form>

<script>
    $('#cancel-btn').click(function () {
        location.reload();
    });
</script>