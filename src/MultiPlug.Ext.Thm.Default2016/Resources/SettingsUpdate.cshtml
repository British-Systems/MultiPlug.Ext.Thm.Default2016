@model MultiPlug.Extension.Domain.Models.Views.Settings.UpdateModel
@{
    Layout = "layout";
}

<style>
    .setting-heading img,
    .setting-heading h2 {
      display:inline-block;
      vertical-align:middle;
    }
    .setting-heading img {
    opacity: 0.7; filter: alpha(opacity=70);
    }

    .setting-heading h2 {
    margin-left:0.1em;
    }
</style>

<div class="setting-heading">
    <img height="35" width="35" alt="MultiPlug Icon" src="assets/default2016/images/MultiPlug-Icon.png">
    <h2>Update MultiPlug</h2>
</div>
<form class="" action="" method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded">
    <h3 class="box-header">
        MultiPlug Server
    </h3>
    <div class="box">
        <div class="row-fluid">

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Current Version</th>
                        <th>Latest Version</th>
                        <th>Update</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.MultiPlugCore.VersionCurrent</td>
                        <td>
                            @if (@Model.MultiPlugCore.VersionLatest == string.Empty)
                            {<text>Unknown</text>}
                            else
                            {<text>@Model.MultiPlugCore.VersionLatest</text>}
                        </td>
                        <td>
                            @if (@Model.MultiPlugCore.VersionLatest != string.Empty)
                            {<input type="checkbox" name="update" value="@Model.MultiPlugCore.AssemblyName" @if (@Model.MultiPlugCore.Update) { <text> checked</text>} />}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <h3 class="box-header">
        Extensions
    </h3>
    <div class="box">
        <div class="row-fluid">

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Assembly Name</th>
                        <th>Extention</th>
                        <th>Current Version</th>
                        <th>Latest Version</th>
                        <th>Update</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Extension in @Model.Extensions)
                    {
                        <tr>
                            <td>@Extension.AssemblyName</td>
                            <td>@Extension.Name</td>
                            <td>@Extension.VersionCurrent</td>
                            <td>
                                @if (@Extension.VersionLatest == string.Empty)
                            {<text>Unknown</text>}
                            else
                            {<text>@Extension.VersionLatest</text>}
                        </td>
                        <td>
                            @if (@Extension.VersionLatest != string.Empty)
                        {<input type="checkbox" name="update" value="@Extension.AssemblyName" @if (@Extension.Update) { <text> checked</text>} />}
                    </td>
                </tr>
                    }
                </tbody>
            </table>
        </div>


        <div class="row-fluid">
            <div class="span10">
                <p>Version data last updated at @Model.LastUpdate <a id="update-refresh" href="#">Refresh</a></p>
            </div>
            <div class="span2">
                <button type="submit" value="submit" class="btn btn-green btn-block">Update</button>
            </div>
        </div>
    </div>
</form>

<form class="" action="/multiplug/sideload/" method="post" accept-charset="utf-8" enctype="multipart/form-data">
    <h3 class="box-header">
        Sideload
    </h3>
    <div class="box">
        <div class="row-fluid">
            <div class="span12">
                <div class="row-fluid">
                    <div class="span10">
                        <input type="file" name="NupkgFile" accept=".nupkg">
                    </div>
                    <div class="span2">
                        <button type="submit" value="submit" class="btn btn-green btn-block">Sideload</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form> 
 
<form class="" action="" method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded">
    <h3 class="box-header">
        Package Manager
    </h3>
    <div class="box">
        <div class="row-fluid">
            <div class="span12">
                <div class="row-fluid"><div class="span12">API URL</div></div>
                <div class="row-fluid">
                    <div class="span12">
                        <input name="PackageManagerAPI" class="span12" type="text" placeholder="URL" value="https://api-v2v3search-0.nuget.org/query">
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span6">
                <div class="row-fluid"><div class="span12">Filter</div></div>
                <div class="row-fluid">
                    <div class="span12">
                        <input name="Filter" class="span12" type="text" placeholder="URL" value="MultiPlug.Ext.">
                    </div>
                </div>
            </div>
            <div class="span6">
                <div class="row-fluid"><div class="span12">Prerelease</div></div>
                <div class="row-fluid">
                    <div class="span12">
                        <input type="checkbox" name="Prerelease" value="" checked />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form> 

<script>

    $('#update-refresh').click(function (e) {
        e.preventDefault();

        $.ajax({
            type: "POST",
            url: 'multiplug/status/update/',
            success: function (data) {
                location.reload();
            },
        });
    });

</script>




